{
  "version": "independent",
  "packages": ["packages/*"],
  "progress": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/LICENSE"
      ],
      "allowBranch": "master",
      "message": "chore(release): publish",
      "conventionalCommits": true
    },
    "bootstrap": { "hoist": true },
    "clean": { "yes": true },
    "run": { "bail": false },
    "exec": { "bail": false }
  }
}
