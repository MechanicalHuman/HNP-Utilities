{
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/LICENSE"
      ],
      "allowBranch": "master",
      "message": "chore(release): publish",
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent"
}
