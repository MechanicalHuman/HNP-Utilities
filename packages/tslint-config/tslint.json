{
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-etc",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "jsRules": true,
  "rules": {
    "ban": {
      "options": [
        {
          "message": "use #type-coercion -> Number(val)",
          "name": "parseInt"
        },
        {
          "message": "use #type-coercion -> Number(val)",
          "name": "parseFloat"
        },
        {
          "message": "use #array-constructor",
          "name": "Array"
        },
        {
          "message": "don't focus spec blocks",
          "name": ["describe", "only"]
        },
        {
          "message": "don't focus tests",
          "name": ["it", "only"]
        }
      ]
    },
    "file-name-casing": [true, "kebab-case"],
    "interface-name": {
      "options": "never-prefix"
    },
    "interface-over-type-literal": false,
    "jsx-boolean-value": {
      "options": "never"
    },
    "match-default-export-name": true,
    "member-access": {
      "options": ["no-public"]
    },
    "newline-before-return": true,
    "no-any": true,
    "no-assign-mutated-array": true,
    "no-boolean-literal-compare": true,
    "no-inferrable-types": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": {
      "options": "check-function-in-method"
    },
    "no-magic-numbers": true,
    "no-missing-dollar-expect": true,
    "no-namespace": {
      "options": ["allow-declarations"]
    },
    "no-parameter-reassignment": true,
    "no-require-imports": true,
    "no-unsafe-any": true,
    "no-unused-declaration": true,
    "object-literal-sort-keys": true,
    "ordered-imports": true,
    "prefer-template": true,
    "switch-default": true
  }
}
