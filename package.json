{
  "name": "hnp-utilities",
  "version": "0.0.1",
  "description": "Monorepo for a series of opinionated NPM packages. ",
  "homepage": "https://github.com/MechanicalHuman/hnp-utilities#readme",
  "bugs": {
    "url": "https://github.com/MechanicalHuman/hnp-utilities/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MechanicalHuman/hnp-utilities.git"
  },
  "license": "MIT",
  "author": "Jorge Proaño <jorge@hiddennodeproblem.com> (https://www.hidden-node-problem.com/)",
  "contributors": [
    "Jorge Proaño <jorge@hiddennodeproblem.com> (https://www.hidden-node-problem.com)"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --ci",
    "clean": "lerna clean -y",
    "commit": "git cz --no-verify",
    "docs": "run-s -sc docs:**",
    "docs:packages:api": "lerna run --no-bail docs",
    "docs:packages:pkg": "lerna exec --no-bail --concurrency=1 --stream package-scripts -- compile --no-todos",
    "docs:self": "package-scripts compile",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "echo \"Error: No tests defined\" && exit 1",
    "todos": "package-scripts todos"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs && lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./packages/commitizen-adapter"
    },
    "scopes": [
      "commitizen-adapter",
      "eslint-config",
      "eslint-config-react",
      "stylelint-config",
      "tslint-config",
      "package-scripts",
      "license-generator"
    ]
  },
  "devDependencies": {
    "@hnp/eslint-config": "file:packages/eslint-config",
    "@hnp/package-scripts": "file:packages/package-scripts",
    "eslint": "^5.8.0",
    "husky": "^1.1.3",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
